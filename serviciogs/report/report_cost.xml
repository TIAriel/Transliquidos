<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="report_cost">
        <t t-call="web.html_container">
            <t t-set="company" t-value="docs.company_id"/>
            <t t-call="web.external_layout_boxed">
                <div class="row">
                    <div class="col-12 font-weight-bold">
                    <div class="text-center"><h3 >REPORTE</h3></div>
                    <hr/>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>NÂ°</th>
                                    <th>Cliente</th>
                                    <th>Costo</th>
                                    <th>Ingreso</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="costo" t-value="0"/>
                                <t t-set="ganancia" t-value="0"/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td><span t-field="o.name"/></td>
                                        <td><span t-field="o.partner_id"/></td>
                                        <td> $ <span t-field="o.project_id.gasto_total"/></td>
                                        <td><span t-field="o.sale_order_id.amount_total"/></td>
                                    </tr>
                                    <t t-set="costo" t-value="costo + o.project_id.gasto_total"/>
                                    <t t-set="ganancia" t-value="ganancia + o.sale_order_id.amount_total"/>
                                </t>
                                <tr>
                                    <td colspan="2">TOTAL</td>
                                    <td>$ <span t-esc="costo"/></td>
                                    <td>$ <span t-esc="ganancia"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>